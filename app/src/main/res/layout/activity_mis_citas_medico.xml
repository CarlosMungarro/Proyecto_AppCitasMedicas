<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.MisCitasMedicoActivity">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:padding="16dp">

        <View
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="16dp"
            android:background="@color/azulLetrasHeader" />

        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mis_citas_medico"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/azulLetrasHeader" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCitasMedico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/btnAgregarCitaMedico"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:clipToPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregarCitaMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/plus"
        app:tint="@android:color/white"
        app:backgroundTint="@color/azul_boton_plus"
        android:elevation="8dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation_medico"
        app:itemIconSize="36dp"
        app:itemIconTint="@color/azulLetrasHeader"
        android:background="@color/white" />

</RelativeLayout>
