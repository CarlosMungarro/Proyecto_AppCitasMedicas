<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.HistorialPacienteActivity">

    <LinearLayout
        android:id="@+id/layoutHeaderHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:padding="16dp">

        <View
            android:layout_width="7dp"
            android:layout_height="90dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/linea_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/azulLetrasHeader" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCitasHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/layoutHeaderHistorial"
        android:layout_above="@id/bottomNavigationHistorial"
        android:layout_marginTop="16dp"
        android:padding="24dp"
        android:clipToPadding="false" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation"
        app:itemIconSize="36dp"
        app:itemIconTint="@color/azulLetrasHeader"
        android:background="@color/white" />

</RelativeLayout>